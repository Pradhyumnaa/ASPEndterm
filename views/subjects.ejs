<!DOCTYPE html>

<head>
    <title>Quizly - Subjects</title>
    <link rel="stylesheet" href="stylesheets/styles.css">
    <link rel="icon" type="image/x-icon" href="images/favicon.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>

<body id="subjectBody">
    <nav class="pt-5 pb-5 navbar navbar-expand-lg bg-body-white">
        <a class="navbar-brand" href="/">
            <img src="images/navbarlogo.png" alt="Bootstrap" id="navbarLogo" width="121" height="50">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="me-5 nav-link disabled"><%= user.nickname %></a>

                </li>
                <li class="nav-item">
                    <a class="ps-5 pe-5 btn btn-primary" href="/logout" role="button">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <p class="mb-3 fs-3" id="subjectsIntro">Welcome to Quizly! Flashcards for University of London made simple and easy. Make as many variations as you want for each subject and revise with just a click of a button!</p>

    <p class="mt-5 fs-4">Level 4</p>
    <% subjectData.forEach(function(subject){ %>
        <%if (subject.level_id == 4){ %>
            <a class="me-4 mt-1 mb-4 shadow btn btn-white" href="/collections/<%= subject.subject_name %>" role="button" id="subjectButton"><%= subject.subject_name %></a>
        <% } %>
    <% }) %>

    <p class="mt-5 fs-4">Level 5</p>
    <% subjectData.forEach(function(subject){ %>
        <%if (subject.level_id == 5){ %>
            <a class="me-4 mt-1 mb-4 shadow btn btn-white" href="/collections/<%= subject.subject_name %>" role="button" id="subjectButton"><%= subject.subject_name %></a>
        <% } %>
    <% }) %>

    <p class="mt-5 fs-4">Level 6</p>
    <% subjectData.forEach(function(subject){ %>
        <%if (subject.level_id == 6){ %>
            <a class="me-4 mt-1 mb-4 shadow btn btn-white" href="/collections/<%= subject.subject_name %>" role="button" id="subjectButton"><%= subject.subject_name %></a>
        <% } %>
    <% }) %>
            


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
